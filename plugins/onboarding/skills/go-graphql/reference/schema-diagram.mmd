erDiagram
    User ||--o{ Post : "author"
    User ||--o{ Comment : "author"
    Post ||--o{ Comment : "comments"
    Post }o--|| Category : "category"
    User }o--o{ Role : "roles"

    User {
        ID id PK
        String email
        String firstName
        String lastName
        DateTime createdAt
    }

    Post {
        ID id PK
        String title
        String content
        ID authorId FK
        ID categoryId FK
        DateTime publishedAt
    }

    Comment {
        ID id PK
        String body
        ID authorId FK
        ID postId FK
        DateTime createdAt
    }

    Category {
        ID id PK
        String name
        String slug
    }

    Role {
        ID id PK
        String name
        String[] permissions
    }
